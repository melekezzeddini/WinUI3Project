<Page
    x:Class="App2.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <TextBlock Text="Connexion Administrateur" 
                   FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10"/>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBox x:Name="UsernameTextBox" PlaceholderText="Nom d'utilisateur" Margin="0,5"/>
            <PasswordBox x:Name="PasswordBox" PlaceholderText="Mot de passe" Margin="0,5"/>
            <Button Content="Se connecter" Click="LoginButton_Click" Margin="0,5"/>
            <TextBlock x:Name="ErrorTextBlock" Text="Erreur : utilisateur ou mot de passe incorrect." 
                       Visibility="Collapsed" Foreground="Red" Margin="0,5"/>
        </StackPanel>
    </Grid>
</Page>
